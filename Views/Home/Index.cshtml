@{
    ViewData["Title"] = "Home Page";
}
@model Url

<div>
    <form method="post" asp-action="ShortenUrl">
        <div class="mb-3">
            <label class="form-label" for="longInputUrl">URL </label>
            <input type="url" class="form-control" id="longInputUrl" name="longUrl" placeholder="Enter URL" />
        </div>
        <button type="submit" class="btn btn-primary">Shorten</button>
        @if (Model != null)
        {
            <p>Shortened URL: <a href="https://localhost:7219/r/@Model.Short">localhost:7219/r/@Model.Short</a></p>
        }
    </form>
</div>
